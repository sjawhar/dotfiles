{
  "mcpServers": {
    "datadog": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/METR/datadog-mcp.git",
        "datadog-mcp"
      ],
      "env": {
        "DD_API_KEY": "${DD_API_KEY}",
        "DD_APP_KEY": "${DD_APP_KEY}",
        "DD_SITE": "us3.datadoghq.com"
      }
    }
  }
}
